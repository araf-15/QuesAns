@model QuesAns.Areas.Student.Models.QuestionVM;

@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor

@{
    ViewData["Title"] = "Question";
}

<div class="col-md-12">
    <!-- Box Comment -->
    <div class="card card-widget">
        <div class="card-header">
            <div class="user-block">
                <span>
                    <a href="#">@Model.QuesBy.FirstName @Model.QuesBy.LastName</a>
                    <span style="display: block">@Model.QuesTime</span>
                </span><br />
                <h3><b>Q: @Model.QuesTitle</b></h3>
            </div>
            @*class="username"*@
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <!-- post text -->
            <p>@Model.QuesDescription</p>
        </div><hr />
        <!-- /.card-body -->

        @{
            if (Model.Answers.Count > 0)
            {
                foreach (var answer in Model.Answers)
                {
                    <div class="card-footer card-comments">
                        <div class="card-comment">
                            <div class="comment-text">
                                <span class="username">
                                    @answer.AnswerBy.FirstName  @answer.AnswerBy.LastName<br />
                                    <small>@answer.AnswerBy.InstituteName</small>
                                    <span class="text-muted float-right">@answer.AsnwerTime</span>
                                </span>
                                @answer.AnswerDescription
                            </div>
                        </div>
                        <!-- /.card-comment -->
                    </div>
                }
            }
        }
        <!-- /.card-footer -->
